<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaunchActivity"
    >


    <ImageView
        android:id="@+id/conveneLogo2"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/convenelog"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textView"
        android:text="@string/enter_location"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/conveneLogo2"
        android:textSize="19sp"/>

    <EditText
        android:singleLine="true"
        android:id="@+id/enterText"
        android:background="@drawable/entertextbg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:padding="7dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:textSize="19sp"/>

    <ImageButton
        android:onClick="getLocation"
        android:id="@+id/goLocation"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/enterText"
        android:layout_marginTop="20dp"
        android:src="@mipmap/go_button"
        android:background="@color/fragBackgroundColor"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/bottomBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-16dp"
        android:paddingBottom="50dp"
        android:textSize="7sp"
        android:background="@color/colorPrimary" />


</RelativeLayout>
